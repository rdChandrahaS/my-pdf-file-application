<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.rdchandrahas.ui.MainController">

    <top>
        <Label text="PDFGear Desktop"
               style="-fx-font-size: 20px; -fx-padding: 10;" />
    </top>

    <center>
        <VBox spacing="10" style="-fx-padding: 10;">
            <ListView fx:id="fileListView" prefHeight="200"/>
        </VBox>
    </center>

    <bottom>
        <HBox spacing="10" style="-fx-padding: 10; -fx-alignment: center;">
            <Button text="Add Files" onAction="#handleAddFiles"/>
            <Button text="Merge PDFs" onAction="#handleMerge"/>
        </HBox>
    </bottom>

</BorderPane>
